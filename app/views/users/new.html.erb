<h2>Register</h2>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h3>There were <%= pluralize(@user.errors.count, "problem") %> with your registration:</h3>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user, url: {action: "create"} do |f| %>
  Email:<br> <%= f.text_field(:email) %> <br>
  Username:<br> <%= f.text_field(:username) %> <br>
  Password:<br> <%= f.password_field(:password) %> <br>
  Confirm Password:<br> <%= f.password_field(:password_confirmation) %> <br>
  <br><%= f.submit "Register" %>
<% end %>
