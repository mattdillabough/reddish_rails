<% if @link.errors.any? %>
  <div class="container">
    <dl class="col-md-12">
      <dt>There were <%= pluralize(@link.errors.count, "error") %> submitting your link:</dt>
      <% @link.errors.full_messages.each do |msg| %>
        <dd><%= msg %></dd>
      <% end %>
    </dl>
  </div>
<% end %>

<div class="container">
  <%= form_for @link, url: {action: "create"} do |f| %>
  <div class="row">
    <h2 class="col-md-12">Create A New Link</h2>
  </div>
  
  <div class="row">
    <div class="form-group col-xs-6 col-md-4">
      <label for="link_url">URL:</label>
      <%= f.text_field :url, class: "form-control"%>
    </div>
  </div>
  
  <div class="row">
    <div class="form-group col-xs-6 col-md-4">
      <label for="link_title">Title:</label>
      <%= f.text_field :title, class: "form-control"%>
    </div>
  </div>
  
  <div class="row">
    <div class="form-group col-xs-6 col-md-4">
      <label for="link_description">Description:</label>
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <%= f.submit 'Create', class: "form-control" %>
    </div>
  </div>
  <% end %>
</div>