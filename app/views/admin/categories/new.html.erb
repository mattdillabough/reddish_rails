<div class="container">
  <%= form_for @category, url: {action: "create"} do |f| %>
  <div class="row">
    <h2 class="col-md-12">Create A New Category</h2>
  </div>
  
  <div class="row">
    <div class = "form-group col-xs-6 col-md-4">
      <label for="category_name">Category Title:</label>
      <%= f.text_field :name, class: "form-control"%>
    </div>
  </div>
  
  <div class="row">
    <div class="col-xs-6 col-md-4">
      <%= f.submit 'Create', class: "form-control" %>
    </div>
  </div>
  <% end %>
</div>